@model IEnumerable<Lista10.Models.Article>

@{
    ViewData["Title"] = "Shop";
}

<h1>Shop</h1>
@using (Html.BeginForm("Index","Shop",FormMethod.Get))
{
    <fieldset>
        Category
        @Html.DropDownList("Category")

        <p>
            <input type="submit" value="Show" />
        </p>

    </fieldset>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="categoryRow" data-categoryid="@item.CategoryId">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img class="index_image" src="~/@Url.Content(item.ImageName is null ? "Images/no_image.jpg" : "Uploads/" + item.ImageName)" alt="Image">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a href="@Url.Action("AddToBasket", new { id = item.ArticleId })" class="btn btn-success">+</a>
                </td>
            </tr>
        }
    </tbody>
</table>

